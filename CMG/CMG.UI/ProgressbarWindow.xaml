<Window x:Class="CMG.UI.ProgressbarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMG.UI"
        mc:Ignorable="d"
        Height="400" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="Loading..." 
        ContentRendered="Window_ContentRendered">
    <Grid Background="#D3D3D3">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Please wait..." Foreground="#FF252627" FontSize="15" Padding="0"/>
            <Grid>
                <Grid.RowDefinitions/>
                <TextBlock Grid.Row="0" x:Name="txtInitial" Width="400" Height="20" Background="Gray" />
                <ProgressBar Background="Gray" Grid.Row="0" x:Name="pbStatus" Width="400" Height="20" Minimum="0" Maximum="100" />
            </Grid>
            <TextBlock FontSize="11" Foreground="#FF252627" Text="{Binding ElementName=pbStatus, Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
