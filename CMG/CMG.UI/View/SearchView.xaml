<UserControl x:Class="CMG.UI.View.SearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CMG.UI.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="\Resources\GridStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="53"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="230"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="23"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Policy #" Margin="15 5 0 0"></TextBlock>
                        <TextBox Grid.Row="1" Margin="15 0 15 8"></TextBox>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="23"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Insured" Margin="15 5 0 0"></TextBlock>
                        <TextBox Grid.Row="1" Margin="15 0 15 8"></TextBox>
                    </Grid>
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="23"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Company" Margin="15 5 0 0"></TextBlock>
                        <TextBox Grid.Row="1" Margin="15 0 15 8"></TextBox>
                    </Grid>
                    <Grid Grid.Column="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="23"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Pay Date" Grid.ColumnSpan="1" Margin="15 5 0 0"></TextBlock>
                        <DatePicker Grid.Row="1" Margin="15 0 15 8"></DatePicker>
                        <DatePicker Grid.Row="1" Grid.Column="1" Margin="15 0 15 8"></DatePicker>
                    </Grid>
                    <Grid Grid.Column="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="23"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Agents" Margin="15 5 0 0"></TextBlock>
                        <TextBox Grid.Row="1" Margin="15 0 15 8"></TextBox>
                    </Grid>
                    <Grid Grid.Column="5">
                        <Button Command="{Binding SearchCommand}">
                            <Image Source="/Asset/Search.png"></Image>
                        </Button>
                    </Grid>
                    <Grid Grid.Column="6">
                        <Button Content="Generate Report" Width="150" HorizontalAlignment="Right" Margin="0 0 15 0" ></Button>
                    </Grid>

                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <DataGrid AutoGenerateColumns="True" x:Name="renewals" ItemsSource="{Binding DataCollection}"  ColumnHeaderStyle="{StaticResource HeaderStyle}" Background="White">
                </DataGrid>
            </Grid>
        </Grid>
            
    </Grid>
</UserControl>
