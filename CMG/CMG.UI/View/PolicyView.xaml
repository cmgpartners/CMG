                                                            <TextBlock Text="{Binding Path=BirthDate,  StringFormat='{}{0: MMM d, yyyy}'}"></TextBlock>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <TextBlock Text="No records found" 
                                                    HorizontalAlignment="Center" 
