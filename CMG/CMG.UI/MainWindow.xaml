<Window x:Class="CMG.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:CMG.UI"
        xmlns:viewModels="clr-namespace:CMG.Application.ViewModel;assembly=CMG.Application"
        xmlns:views="clr-namespace:CMG.UI.View"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1200" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/LeftNavStyles.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type viewModels:CommissionViewModel}" >
                <views:RenewalsView DataContext="{Binding}" ></views:RenewalsView>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{StaticResource gridBackGround}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10 0">
                <Button Width="25" Height="25" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Click="btnShutDown_Click">
                    <materialDesign:PackIcon Kind="Power"></materialDesign:PackIcon>
                </Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <TextBlock Text="cmg" Style="{StaticResource logoTextBlock}"></TextBlock>
            </Grid>
            <StackPanel Grid.Row="1">
                <Button x:Name="testbutton" Command="{Binding RenewalsCommand}" />
                <ListView x:Name="lstNavItems" SelectionChanged="LstNavItems_SelectionChanged" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ItemContainerStyle="{StaticResource listViewItemBackGround}">
                    <ListViewItem Height="60">
                        <Grid Width="100">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"></RowDefinition>
                                <RowDefinition Height="30"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Image Source="/Asset/Renewals.png" Style="{StaticResource imageIconStyle}"></Image>
                            <TextBlock Grid.Row="1" Style="{StaticResource textBlockStyle}" Text="Renewals"></TextBlock>
                        </Grid>
                    </ListViewItem>
                    <ListViewItem Height="60">
                        <Grid Width="100">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"></RowDefinition>
                                <RowDefinition Height="30"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Image Source="/Asset/FYC.png" Style="{StaticResource imageIconStyle}"></Image>
                            <TextBlock Grid.Row="1" Style="{StaticResource textBlockStyle}" Text="FYC"></TextBlock>
                        </Grid>
                    </ListViewItem>
                    <ListViewItem Height="60">
                        <Grid Width="100">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"></RowDefinition>
                                <RowDefinition Height="30"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Image Source="/Asset/Financial Summary.png" Style="{StaticResource imageIconStyle}"></Image>
                            <TextBlock Grid.Row="1" Style="{StaticResource textBlockStyle}" Text="Summary"></TextBlock>
                        </Grid>
                    </ListViewItem>
                    <ListViewItem Height="60">
                        <Grid Width="100">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"></RowDefinition>
                                <RowDefinition Height="30"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Image Source="/Asset/Search.png" Style="{StaticResource imageIconStyle}"></Image>
                            <TextBlock Grid.Row="1" Style="{StaticResource textBlockStyle}" Text="Search"></TextBlock>
                        </Grid>
                    </ListViewItem>
                </ListView>
            </StackPanel>
        </Grid>
<!-- move this to view-->
        <Grid Grid.Column="1" Grid.Row="1" Background="#FF9BADB8" Opacity="0.7">
            <ContentPresenter  Content="{Binding}" ></ContentPresenter>
        </Grid>
    </Grid>
</Window>
